<!DOCTYPE html>

<html ng-app="App" ng-controller="MainController">
<head>
    <meta name="viewport" content="width=device-width" />
    <title ng-bind="title + ' - HR Management'">HR Management</title>

    <!-- AngularJS -->
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>

    <!-- JQuery -->
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-1.3.3.min.js"></script>

    <!-- SPA/Controller -->
    <script src="~/SPA/Controller/MainController.js"></script>
    <script src="~/SPA/Controller/EmployeeController.js"></script>
    <script src="~/SPA/Controller/EditEmployeeController.js"></script>
    <script src="~/SPA/Controller/AddressController.js"></script>
    <script src="~/SPA/Controller/EditAddressController.js"></script>
    <script src="~/SPA/ApiService.js"></script>
    <script src="~/SPA/App.js"></script>

    <!-- Styles -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/app.css" rel="stylesheet" />
</head>
<body>
    <div>
        <nav class="navbar navbar-inverse navbar-fixed-top hr-navbar">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">HR Management</a>
                </div>
            </div>
        </nav>
        
        <div class="hr-content">
            <div class="container body-content">
                <h3 ng-bind="title"></h3>
                <hr />
                <div ng-show="hasError">
                    <div class="alert alert-danger" role="alert">
                        <span class="fa fa-exclamation-triangle"></span>
                        <span class="sr-only">Error: </span>{{errorMessage}}
                    </div>
                </div>
                <div ng-view>

                </div>

                <hr />
                <footer>
                    <p>&copy; <span ng-bind="year"></span> - HR Management Software</p>
                </footer>
            </div>
        </div>
    </div>
</body>
</html>